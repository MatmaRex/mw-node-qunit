{
  "name": "mw-node-qunit",
  "version": "2.0.0",
  "description": "Node CLI qunit runner with mediawiki additions",
  "main": "index.js",
  "scripts": {
    "format": "prettier --single-quote --write *.js ./**/*.js",
    "test": "./index.js 'tests/**/*.test.js' | tap-dot",
    "test:raw": "./index.js 'tests/**/*.test.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joakin/mw-node-qunit.git"
  },
  "keywords": [
    "node",
    "cli",
    "qunit",
    "mediawiki",
    "test",
    "runner"
  ],
  "author": "Joaquin Oltra <joaquin@chimeces.com> (http://chimeces.com)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/joakin/mw-node-qunit/issues"
  },
  "homepage": "https://github.com/joakin/mw-node-qunit#readme",
  "dependencies": {
    "glob": "^7.1.2",
    "jquery": "^3.2.1",
    "jsdom": "^11.0.0",
    "qunit-tap": "^1.5.1",
    "qunitjs": "^2.3.2",
    "sinon": "^2.3.1"
  },
  "devDependencies": {
    "prettier": "^1.3.1",
    "tap-dot": "^1.0.5"
  },
  "bin": {
    "mw-node-qunit": "./index.js"
  }
}
